<ModelErrors::Header
  @noHeader={{@noHeader}}
  @model={{@model}}
  @isRunning={{not @errorModel}}
  @errors={{@errorModel.errorList}}
  @modelId={{@modelId}}
  @linkRoute={{@linkRoute}}
  @linkModels={{@linkModels}}
  @modelDescription={{@modelDescription}}
  @smallHeaderIdWidth={{@smallHeaderIdWidth}}
>
  {{#if (has-block)}}
    {{yield
      (component
        "model-errors/list"
        model=@model
        errors=@errorModel.errorList
        isRunning=(not @errorModel)
      )
    }}
  {{else}}
    <ModelErrors::List
      @model={{@model}}
      @errors={{@errorModel.errorList}}
      @isRunning={{not @errorModel}}
    />
  {{/if}}
</ModelErrors::Header>