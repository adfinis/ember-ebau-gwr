{{#unless this.isHidden}}
  <BackRoute
    @backRoute={{@backRoute}}
    @backModel={{@backModel}}
    @backText={{@backText}}
  />
  <UkTab ...attributes as |Tab|>
    {{#each @links as |link|}}
      <Tab.link-item @route={{link.route}} @models={{link.models}}>
        {{link.text}}
      </Tab.link-item>
    {{/each}}
  </UkTab>
{{/unless}}
