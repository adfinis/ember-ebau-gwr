{{#unless this.isHidden}}
  <BackRoute
    @backRoute={{@backRoute}}
    @backModel={{@backModel}}
    @backText={{@backText}}
  />
  <UkTab ...attributes as |Tab|>
    {{#each @links as |link|}}
      <Tab.item
        @href={{build-url link.route link.models}}
      >{{link.text}}</Tab.item>
    {{/each}}
  </UkTab>
{{/unless}}