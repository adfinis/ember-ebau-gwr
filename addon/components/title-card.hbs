<UkFlex @horizontal="center" ...attributes>
  <LinkTo
    @route={{@route}}
    @model={{@model}}
    class="uk-button uk-button-default uk-width-medium uk-height-medium uk-flex uk-flex-middle uk-flex-column
      {{if @workInProgress 'uk-disabled uk-text-muted'}}"
  >
    {{#if @workInProgress}}
      <span
        class="uk-badge uk-position-absolute uk-margin-top uk-padding-small"
      >
        {{t "ember-gwr.soonAvailable"}}
      </span>
    {{/if}}
    <div class="ember-ebau-gwr-title-card">
      <FaIcon
        @icon={{or @icon.name @icon}}
        @prefix={{@icon.prefix}}
        @fixedWidth={{true}}
        @size="4x"
      />
      <div class="title-card-text">{{@title}}</div>
    </div>
  </LinkTo>
</UkFlex>
