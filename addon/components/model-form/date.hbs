<div class="{{if @horizontal "uk-flex"}}">
  <div class="{{if @horizontal "uk-margin-left uk-flex-last"}}">
    {{component @labelComponent}}
  </div>
  {{#if @disabled}}
    <input
      type="text"
      class="uk-input uk-width-1 {{if @isInvalid "uk-form-danger"}} {{if @isValid "uk-form-success"}}"
      name={{@name}}
      value={{format-date @value day="2-digit" month="2-digit" year="numeric"}}
      placeholder={{t "ember-gwr.components.modelForm.datePlaceholder"}}
      disabled
      ...attributes
    >
  {{else}}
    <input
      type="text"
      class="uk-input uk-width-1 {{if @isInvalid "uk-form-danger"}} {{if @isValid "uk-form-success"}}"
      name={{@name}}
      required={{@required}}
      placeholder={{t "ember-gwr.components.modelForm.datePlaceholder"}}
      ...attributes
      {{pikaday
        value=@value
        yearRange=this.yearRange
        onSelect=@update
        toString=this.formatDate
        firstDay=1
        i18n=this.pikadayTranslations
      }}
    />
  {{/if}}
</div>
{{component @hintComponent}}
{{component @errorComponent}}
