<div class="uk-padding">
  <h1 class="uk-text-center">
    {{t "ember-gwr.globalLandingPage.heading"}}
  </h1>
  <h4 class="uk-text-center uk-margin-remove-top uk-margin-large">
    {{t "ember-gwr.globalLandingPage.infoText"}}
  </h4>

  <div uk-grid class="uk-child-width-1-1 uk-child-width-1-3@m">
    <TitleCard
      @title={{t "ember-gwr.globalLandingPage.searchProject"}}
      @route="search-project"
      @workInProgress={{true}}
      @icon={{hash name="folder-closed" prefix="far"}}
    />
    <TitleCard
      @title={{t "ember-gwr.globalLandingPage.searchBuilding"}}
      @route="search-building"
      @model="1"
      @workInProgress={{true}}
      @icon={{hash name="building" prefix="far"}}
    />
    <TitleCard
      @title={{t "ember-gwr.globalLandingPage.quarterlyClosure"}}
      @route="global-landing-page"
      @icon="list-check"
    />
  </div>
</div>
